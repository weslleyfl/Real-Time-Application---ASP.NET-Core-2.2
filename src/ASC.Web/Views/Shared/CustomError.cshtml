@using Microsoft.AspNetCore.Http
@using ASC.Utilities
@inject IHttpContextAccessor UserHttpContext
@{
    ViewData["Title"] = "CustomError";
    Layout = !UserHttpContext.HttpContext.User.Identity.IsAuthenticated ? "_Layout" : "~/Views/Shared/_SecureLayout.cshtml";
}


    <div class="row">
        <div class="col s12">
            <div class="card-panel orange lighten-1 margin-bottom-50px margin-top-50px">
                <span class="white-text">
                    Um erro ocorreu durante o processamento do seu pedido. Entre em contato com o atendimento ao cliente com o seguinte <br/>
                    Ticket No. @ViewData["ExceptionId"]
                </span>
            </div>
        </div>
    </div>
